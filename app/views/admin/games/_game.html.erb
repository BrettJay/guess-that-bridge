<%= link_to [:admin, game], id: dom_id(game), class: 'grid grid-cols-3 gap-px bg-slate-100 group hover:bg-blue-500 hover:text-white' do %>
  <div class='col-span-2 px-4 py-2 bg-white group-hover:bg-blue-500'><%= game.title %></div>
  <div class='px-4 py-2 bg-white group-hover:bg-blue-500'><%= pluralize(game.questions.count, 'question') %></div>
<% end %>

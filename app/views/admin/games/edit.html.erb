<% content_for :breadcrumbs do %>
  <li><%= link_to 'Games', admin_games_path %> </li>
  <li><%= link_to @game.title, admin_game_path(@game) %></li>
  <li>Edit</li>
<% end %>

<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing game</h1>

  <%= render "form", game: @game %>

  <%= link_to "Show this game", [:admin, @game], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to games", admin_games_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Games" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Games</h1>
    <%= link_to "New game", new_admin_game_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <ol id="games" class="min-w-full">
    <% @games.each do |game| %>
      <%= link_to [:admin, game] do %>
        <%= render game %>
      <% end %>
    <% end %>
  </ol>
</div>
